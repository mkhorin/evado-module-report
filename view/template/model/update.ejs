<% layout(_view.get(_layout)) %>
<% block('title', 'Update report') %>

<% const userUrl = _module.getParam('userUpdateUrl'); %>

<%- include(_view.get('_part/group/columns'), {
    items: [{
        template: _view.get('_part/attr/static'),
        params: {
            attr: 'state',
            format: 'label'
        }
    },{
        template: _view.get('_part/attr/static'),
        params: {
            attr: 'report'
        }
    }]
}) %>

<%- include('./_form') %>

<%- include(_view.get('_part/group/columns'), {
    items: [{
        template: _view.get('_part/attr/static'),
        params: {
            attr: 'createdAt',
            format: 'timestamp'
        }
    },{
        template: _view.get('_part/attr/static'),
        params: {
            attr: 'creator',
            value: model.get('creator.name'),
            url: userUrl ? _url(userUrl) + model.get('creator') : null
        }
    }]
}) %>
